{
  "compilerOptions": {
    /* ===== Dev Environment ===== */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],

    /* ===== Types ===== */
    "types": ["node", "express"],

    /* ===== Paths ===== */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ===== Behavior ===== */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },

  "include": [
    "src/**/*",
    "src/types/express.d.ts"   // ðŸ”¥ VERY IMPORTANT
  ],

  "exclude": ["node_modules"]
}
